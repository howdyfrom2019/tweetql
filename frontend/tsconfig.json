{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "target": "es5",
    "jsx": "preserve",
    "isolatedModules": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true
    //    "paths": {
    //      "@/*": ["src/*"]
    //    }
  },
  "include": [
    "./src/**/*",
    "webpack.config.ts",
    "custom.d.ts"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "Node",
      "target": "ES5",
      "esModuleInterop": true
    }
  },
  "exclude": [
    "node_modules"
  ]
}
